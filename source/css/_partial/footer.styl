#footer
    padding: 20px 0
    border-top: 1px solid color-border
    color: color-default
    font-size: font-size + 2
    text-align: center
    .outer
        margin-bottom: 0
    a
        color: #888
        text-decoration: none
        &:hover
            text-decoration: underline

#footer-info
    line-height: line-height
    font-size: 0.85em
#footer-expand-info
    display: flex
    justify-content space-around
    .widget-title
        color: rgb(26, 188, 156);
    .widget
        ul li
            padding: 2px 0
#footer-base-info
    .busuanzi-info
        .foot-count
            font-weight: bold
            color: #087b5e
            font-size: 20px